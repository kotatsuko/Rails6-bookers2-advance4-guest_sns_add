        <% book.book_comments.each do |book_comment| %>
        <tr>
          <td>
            <%= link_to user_path(book_comment.user_id) do %>
              <%= image_tag book_comment.user.get_profile_image, size:"100x100" %>
              <p><%= book_comment.user.name %></p>
            <% end %>
          </td>
          <td>
            <%= book_comment.comment %>
          </td>
          <% if book_comment.user_id==current_user.id %>
          <td>
            <%= link_to "Destroy",book_book_comment_path(book_comment.book, book_comment),method: :delete, remote: true,class:"btn btn-sm btn-danger" %>
          </td>
          <% end %>
        </tr>
        <% end %>